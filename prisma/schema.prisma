// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id           Int           @id @default(autoincrement())
  email        String        @unique
  password     String
  name         String
  role         String        @default("client") // "client", "employee" ou "admin"
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  appointments Appointment[]
}

model Appointment {
  id         Int      @id @default(autoincrement())
  clientName String
  email      String
  carBrand   String
  date       DateTime
  timeSlot   String   // Format: "08:00", "09:00", etc.
  userId     Int?     // Optional: lien avec le compte client
  user       User?    @relation(fields: [userId], references: [id])
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  
  @@index([date, timeSlot])
}
